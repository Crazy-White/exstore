{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "declaration": true,
        "sourceMap": false,
        "declarationDir": "lib",
        "outDir": "lib",
        "importHelpers": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/@types", "src/types"],
        "baseUrl": ".",
        "paths": {
            "tslib": ["node_modules/tslib/tslib.d.ts"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}
